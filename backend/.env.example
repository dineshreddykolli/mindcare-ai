# Database Configuration
DATABASE_URL=postgresql://mindcare:mindcare123@localhost:5432/mindcare_db

# AI Service Configuration
# Choose one: anthropic or openai
AI_PROVIDER=anthropic

# Anthropic Claude API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (alternative)
# OPENAI_API_KEY=your_openai_api_key_here

# LLM Model Settings
LLM_MODEL=claude-sonnet-4-20250514
# For OpenAI: gpt-4-turbo-preview
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.3

# Security
SECRET_KEY=your-secret-key-change-in-production-use-random-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
ENVIRONMENT=development
DEBUG=true
APP_NAME=MindCare AI
VERSION=1.0.0

# Risk Scoring Thresholds
CRITICAL_RISK_THRESHOLD=80.0
HIGH_RISK_THRESHOLD=60.0
MODERATE_RISK_THRESHOLD=40.0

# AWS Configuration (for production)
AWS_REGION=us-west-2
S3_BUCKET_NAME=mindcare-documents

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
