# =====================================
# MindCare AI - Frontend Configuration
# =====================================
#
# Copy this file to .env and fill in your values
# These variables are exposed to the browser (prefix with VITE_)
#

# ----- API Configuration -----
# Backend API URL
VITE_API_URL=http://localhost:8000

# WebSocket URL (for real-time features)
VITE_WS_URL=ws://localhost:8000/ws

# ----- Environment -----
VITE_ENVIRONMENT=development        # Options: development, staging, production

# ----- Feature Flags -----
# Enable/disable frontend features
VITE_ENABLE_CHATBOT=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_OFFLINE_MODE=false

# ----- Error Tracking (Sentry) -----
# Get your DSN at: https://sentry.io/
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# ----- Analytics -----
# Google Analytics
VITE_GA_TRACKING_ID=
VITE_GA_ENABLED=false

# Mixpanel
VITE_MIXPANEL_TOKEN=
VITE_MIXPANEL_ENABLED=false

# ----- Application Settings -----
VITE_APP_NAME="MindCare AI"
VITE_APP_VERSION=1.0.0
VITE_DEFAULT_LANGUAGE=en

# ----- UI Configuration -----
VITE_THEME=light                   # Options: light, dark, auto
VITE_SHOW_DEBUG_INFO=false         # Show debug panel (development only)

# ----- API Timeouts -----
VITE_API_TIMEOUT=30000             # Milliseconds
VITE_UPLOAD_TIMEOUT=60000          # Milliseconds

# ----- Feature Limits -----
VITE_MAX_FILE_SIZE_MB=10
VITE_MAX_MESSAGE_LENGTH=1000
VITE_SESSION_TIMEOUT_MINUTES=30

# ----- External Services -----
# Stripe (for payments - if enabled)
VITE_STRIPE_PUBLIC_KEY=

# Notes:
# 1. All variables must be prefixed with VITE_ to be accessible
# 2. Never put secrets or API keys here (they're exposed to browser)
# 3. Restart dev server after changing these values
